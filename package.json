{
  "name": "webpack_5_boilerplate",
  "version": "0.9.2",
  "description": "This template is designed to quickly create websites (including multi-page ones). The template structure is prepared to use the BEM methodology. My email butnothero@gmail.com.",
  "main": "index.js",
  "author": "Danil Kondrachuk",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack serve --config webpack-config/webpack/webpack.config.dev.js",
    "build": "cross-env NODE_ENV=production webpack --config webpack-config/webpack/webpack.config.prod.js",
    "clean": "rmdir dist /S /Q",
    "lint:script": "eslint --cache --ext .js,.jsx,.ts,.tsx src",
    "lint:script:fix": "eslint --fix --cache --ext .js,.jsx,.ts,.tsx src",
    "lint:script:dump": "eslint --print-config ./.eslintrc.json",
    "lint:style": "stylelint **/*.css, **/*.scss",
    "lint:style:fix": "stylelint --fix  **/*.css, **/*.scss"
  },
  "keywords": [
    "webpack",
    "webpack 5",
    "webpack boilerplate",
    "webpack pug",
    "webpack sass"
  ],
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.12.11",
    "@types/node": "^14.14.22",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "autoprefixer": "^10.2.3",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^7.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^5.0.1",
    "css-mqpacker": "^7.0.0",
    "cssnano": "^4.1.10",
    "eslint": "^7.19.0",
    "eslint-plugin-optimize-regex": "^1.2.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-sonarjs": "^0.5.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^4.5.1",
    "mini-css-extract-plugin": "^1.3.5",
    "node-sass": "^5.0.0",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "postcss-loader": "^4.2.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "pug": "^3.0.0",
    "pug-loader": "^2.4.0",
    "sass-loader": "^10.1.1",
    "style-loader": "^2.0.0",
    "stylelint": "^13.9.0",
    "stylelint-config-recess-order": "^2.3.0",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.18.0",
    "stylelint-webpack-plugin": "^2.1.1",
    "terser-webpack-plugin": "^5.1.1",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "webpack": "^5.18.0",
    "webpack-cli": "^4.4.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.7.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ButNotHero/Webpack-5-Template"
  },
  "bugs": {
    "url": "https://github.com/ButNotHero/Webpack-5-Template/issues"
  }
}
